alias ll='ls -l'
alias la='ls -A'
alias l='ls -CF'
alias a=alias
alias all='ls -Ffx'
alias c=clear
alias df='df -h'
alias emacs="/usr/bin/emacs -ms Red -cr Green -i -geometry =80x69+100+38  -bg NavyBlue -fg White & "
